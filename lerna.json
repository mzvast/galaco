{
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/example/**",
    "**/*.md",
    "**/*.lock",
    "**/*lock.json"
  ],
  "npmClient": "yarn",
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "angular"
    }
  }
}
